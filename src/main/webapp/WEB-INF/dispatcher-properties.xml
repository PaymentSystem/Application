<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="/" class="com.epam.lab.paymentsystem.controller.IndexController"/>

    <bean name="/*" class="org.springframework.web.servlet.mvc.multiaction.MultiActionController">
        <property name="methodNameResolver" ref="propsResolver"/>
        <property name="delegate" ref="userController"/>
    </bean>

    <bean id="propsResolver" class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <value>
                /user = getUser
                /add = add
            </value>
        </property>
    </bean>

    <bean name="userController" class="com.epam.lab.paymentsystem.controller.UserController">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="userService" class="com.epam.lab.paymentsystem.service.impl.UserServiceImpl">
        <constructor-arg ref="userDAO"/>
    </bean>

    <bean id="userDAO" class="com.epam.lab.paymentsystem.dao.impl.UserDAO"/>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>


</beans>
