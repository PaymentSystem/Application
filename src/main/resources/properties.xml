<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="controller" class="com.epam.lab.paymentsystem.controller.Controller">
        <constructor-arg name="hello" value="Hello, world!"/>
    </bean>

    <bean id="main" class="com.epam.lab.paymentsystem.PaymentSystemApplication">
        <property name="controller" ref="controller"/>
    </bean>

</beans>

